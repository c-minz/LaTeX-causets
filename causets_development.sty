\newcommand*{\fence@PermBuilder}[1]{%
\ifcase#1%
\or%=1
2%
\else%
\pgfmathsetmacro{\fence@Perm@First}{int(2 * #1 - 3)}%
\pgfmathsetmacro{\fence@Perm@Second}{int(2 * #1)}%
\pgfmathsetmacro{\fence@PermBuilder@subN}{int(#1 - 1)}%
\edef\fence@Perm@End{\fence@PermBuilding{\fence@PermBuilder@subN}}%
\edef\fence@PermBuilt{\fence@Perm@First,\fence@Perm@Second,\fence@Perm@End}%
\fence@PermBuilt%
\fi%
}

\newcommand*{\fence@PermBuilding}[1]{%
\edef\fence@PermBuilt{\fence@PermBuilder{#1}}%
\fence@PermBuilt%
}

\newcommand*{\fence@Perm}[1]{%
\pgfmathsetmacro{\fence@Perm@Start}{int(2 * #1 - 1)}%
\fence@Perm@Start,\fence@PermBuilder{#1}%
}
